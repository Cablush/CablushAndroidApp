<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Cablush" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/cablush_light</item>
        <item name="colorPrimaryDark">@color/cablush_dark_blue</item>
        <item name="colorAccent">@color/cablush_orange</item>

        <item name="android:textColorPrimary">@color/primary_text_cablush_light</item>
        <item name="android:textColorSecondary">@color/secondary_text_cablush_light</item>
        <item name="android:textColorLink">@color/cablush_orange</item>

        <item name="android:dialogTheme">@style/Cablush.Dialogs</item>
        <item name="android:alertDialogTheme">@style/Cablush.Dialogs</item>
    </style>

    <style name="Cablush.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Cablush.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/cablush_light</item>
        <item name="android:windowBackground">@color/cablush_dark_blue</item>
    </style>

    <style name="Cablush.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/cablush_light</item>
        <item name="android:windowBackground">@color/cablush_dark_blue</item>
    </style>

    <style name="Cablush.Dialogs" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/cablush_light</item>
        <item name="colorPrimaryDark">@color/cablush_dark_blue</item>
        <item name="colorAccent">@color/cablush_orange</item>

        <item name="android:colorBackground">@color/cablush_light</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance">
        <item name="android:typeface">normal</item>
    </style>

    <style name="TextAppearance.Bold" parent="TextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.DialogWindowTitle" parent="TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.DrawerItem_Primary" parent="TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.DrawerItem_Secondary" parent="TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

</resources>