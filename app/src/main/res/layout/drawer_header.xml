<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_azul"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/headerLogo"
        android:contentDescription="@string/app_name"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/headerLogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:contentDescription="@string/drawer_item_login_register"
            android:src="@drawable/ic_account_circle_cablush_orange"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name "
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/vertical_spacing"
            android:layout_marginLeft="@dimen/menu_text_margin"
            android:layout_marginStart="@dimen/menu_text_margin"
            style="@style/TextAppearance.DrawerItem_Primary"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user_email@server.com.br"
            android:layout_below="@+id/name"
            android:layout_marginLeft="@dimen/menu_text_margin"
            android:layout_marginStart="@dimen/menu_text_margin"
            style="@style/TextAppearance.DrawerItem_Secondary"/>
    </RelativeLayout>

</RelativeLayout>